<div class="col-lg-3">
  <%= render "sidebars/left_sidebar" %>
</div>

<div class="col-lg-6">
<h1>Edit service</h1>

<%= form_for([current_user, @service]) do |f| %>

  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@service.errors.count, "error") %> prohibited
        this service from being saved:
      </h2>
      <ul>
        <% @service.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  </p>

  <p>
  <%= f.label :price %><br>
  <%= f.text_area :price %>
  </p>

  <p>
  <%= f.submit %>
  </p>

<% end %>
</div>

<div class="col-lg-3">
  <%= render "sidebars/right_sidebar" %>
</div>

