<div class="container-fluid container-fill-height">
  <div class="container-content-middle">
    <%= form_for(resource,
                 as: resource_name,
                 url: registration_path(resource_name),
                 html: {class: "mx-auto text-center app-login-form"}) do |f| %>

      <div class="form-group <%= has_error(:first_name) %>">
      <%= f.label :first_name,
        class: "control-label" %>
      <%= error_messages_for(:first_name) %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group <%= has_error(:last_name) %>">
      <%= f.label :last_name %>
      <%= error_messages_for(:last_name) %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group <%= has_error(:email) %>">
      <%= f.label :email %>
      <%= error_messages_for(:email) %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group mb-3 <%= has_error(:zipcode) %>">
      <%= f.label :password %>
      <%= error_messages_for(:password) %>
      <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control" %>
      </div>

      <div class="form-group <%= has_error(:zipcode) %>">
      <%= f.label :zipcode %>
      <%= error_messages_for(:zipcode) %>
      <%= f.text_field :zipcode, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-5">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
        <%= link_to "Log in", new_session_path(resource_name),
            {class: "btn btn-lg btn-secondary"} %>
      </div>

      <footer class="screen-login">
        <a href="#" class="text-muted">Forgot password</a>
      </footer>
    <% end %>
  </div>
</div>

