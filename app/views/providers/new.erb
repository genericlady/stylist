<article class="provider-signup">
  <div class="card">
    <div class="card-block">
      <div class="card-text">
        In order to offer services on beautypin you must be licensed or in school.
        This is necessary because states have laws against people offering beauty
        services for money if you don't have a license.

      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-block">
      <div class="card-text p-2">
        legal identification  (state id / drivers license / passport) and a photo of you with that same piece of identification.
      </div>
      <%= form_for @user,
        url: provider_path(@user.id),
        html: { multipart: true } do |form| %>

        <div class="form-group">
          <label for="identification">Identification</label>
          <%= form.
            file_field :identification,
            class: "form-control-file",
            id: "identification",
            aria_describedby: "fileHelp" %>

          <small id="fileHelp" class="form-text text-muted">
            Snap a clear picture with your phone or scan it in.
          </small>

        </div>

        <div class="form-group">
          <label for="selfie">Selfie with identification</label>
          <%= form.
            file_field :selfie,
            class: "form-control-file",
            id: "selfie",
            aria_describedby: "fileHelp" %>

          <small id="fileHelp" class="form-text text-muted">Snap a clear picture with your phone and make sure the identification used is held up next to your face.</small>
        </div>

        <%= form.fields_for @license,
          html: { multipart: true } do |builder| %>

        <div class="form-group">
          <label for="license">
          cosmetology / esthitician license / any relevant license 
          </label>

          <%= builder.
            file_field :image,
            class: "form-control-file",
            id: "image",
            aria_describedby: "fileHelp" %>

          <small id="fileHelp" class="form-text text-muted">
            Scan or snap a photo of your cosmetology / esthiology license.
          </small>

          <%= builder.
            text_field :expiration,
            class: "form-control-text",
            id: "expiration",
            aria_describedby: "expirationHelp" %>
 
          <small id="expirationHelp" class="form-text text-muted">
            Include the expiration date of the license.
          </small>
        </div>
        <% end %>

        <%= form.submit value: "Submit", class: "btn btn-lg btn-primary" %>
      <% end %>

    </div>
  </div>

  <div class="card">
    <div class="card-block">
      <div class="card-text">There is a fee associated with this verification service of 5$.
      </div>
    </div>
  </div>

</article>
