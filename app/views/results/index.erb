<% if @results.first.locatable? %>
  <div class="col-xs-12">
  <%= render "maps/stylist_map.js.erb" %>
  </div>
<% end %>

<div class="col-xs-12 col-md-9 col-lg-8">
  <% @results.each do |r| %>
    <div class="card">
      <%= image_tag "haircut-emoji.png", {class: "card-img-top col-xs-5 img-thumbnail", alt: "Card image cap"} %>
      <div class="card-block">
        <h4 class="card-title"><%= r.title %></h4>
        <h5 class="card-subtitle"><%= r.subtitle %></h5>
        <p class="card-text"><%= r.print_locations %></p>
        <div class="card-footer text-muted">
          <p>Rating: <%= r.rating %></p>
          <em>Total Votes: <%= r.total_reviews %></em>
        </div>
      </div>
    </div>
  <% end %>
</div>
