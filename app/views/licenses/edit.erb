<div class="card mx-auto">
  <div class="card-block">
    <%= form_for([@user, @license]) do |license_form| %>

        <div class="form-group">
          <%= license_form.label :license_type, class: "col mb-0" %>
          <%= license_form.text_field :license_type,
            value: @license.license_type %>
        </div>

        <div class="form-group">
          <%= license_form.label :full_name, class: "col mb-0" %>
          <%= license_form.text_field :full_name, 
            value: @license.full_name %>
        </div>

        <div class="form-group">
          <%= license_form.label :number, class: "col mb-0" %>
          <%= license_form.text_field :number,
            value: @license.number %>
        </div>

        <div class="form-group">
          <%= license_form.label :state, class: "col mb-0" %>
          <%= license_form.text_field :state,
            value: @license.state %>
        </div>

      <%= license_form.submit "Update" %>
    <% end %>
  </div>
</div>
