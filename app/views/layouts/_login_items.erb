<%
  logout_options =
  {
    method: :delete,
    class: "nav-link",
  }
%>

<% if user_signed_in? %>
  <li class="login-helper nav-item">
    <%= link_to('Logout', destroy_user_session_path, logout_options) %>        
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to('Login', new_user_session_path, {class: "nav-link"}) %>  
  </li>
<% end %>
