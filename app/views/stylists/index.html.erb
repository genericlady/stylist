<header>
  <h1 class="h2">Stylist Search</h1>
</header>

<section class="search-form">
  <%= form_for :stylists, method: :get do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= label_tag :stylist, nil, class: "sr-only" %>
        <%= text_field_tag 'search_terms[stylist]', nil,
              placeholder: "First Name, Last Name",
              class: "form-control input-lg" %>
      </div>
    </div>
    
    <div class="col-sm-5">
      <div class="form-group">
        <%= label_tag :near, nil, class: "sr-only" %>
        <%= text_field_tag 'search_terms[near]', nil,
              placeholder: "New York, NY",
              class: "form-control input-lg" %>
      </div>
    </div>
    
    <div class="col-sm-1">
      <%= submit_tag "Find",
        class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
</section>

<section class="search-results">
  <header>
    <h1 class="h3">Results</h1>
  </header>
  <%= render partial: "pager", locals: { search_terms: @search_terms, page: @page } %>

  <ol class="list-group">
    <% @stylists.each do |stylist| %>
      <li class="list-group-item clearfix">
        <h3 class="pull-right"><small class="text-uppercase">Joined</small>
          <%= l stylist.created_at.to_date %>
        </h3>
        <h2 class="h3">
          <%= stylist.first_name %> <%= stylist.last_name %>
        </h2>
        <h4><%= stylist.locations.first.to_string %></h4>
      </li>
    <% end %>
  </ol>
  <%= render partial: "pager", locals: { search_terms: @search_terms, page: @page } %>
</section>
